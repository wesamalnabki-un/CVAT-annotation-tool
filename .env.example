# CVAT Configuration Example
# Copy this file to .env and fill in your values

# --- General Settings ---
CVAT_HOST=localhost
CVAT_BASE_URL=http://localhost:8080
ALLOWED_HOSTS=*
DJANGO_SECRET_KEY=ReplaceWithARandomString

# --- Database (PostgreSQL) ---
CVAT_POSTGRES_HOST=cvat_db
CVAT_POSTGRES_DBNAME=cvat
CVAT_POSTGRES_USER=root
CVAT_POSTGRES_PASSWORD=
CVAT_POSTGRES_PORT=5432

# --- Redis Configuration ---
CVAT_REDIS_INMEM_HOST=cvat_redis_inmem
CVAT_REDIS_INMEM_PORT=6379
CVAT_REDIS_INMEM_PASSWORD=
CVAT_REDIS_ONDISK_HOST=cvat_redis_ondisk
CVAT_REDIS_ONDISK_PORT=6666
CVAT_REDIS_ONDISK_PASSWORD=

# --- Cognito Authentication ---
# IMPORTANT: This must be your "Cognito Domain" (Hosted UI), NOT the "User Pool ID" or "Issuer URL".
# Format: https://<your-prefix>.auth.<region>.amazoncognito.com
COGNITO_DOMAIN=https://your-domain.auth.your-region.amazoncognito.com
COGNITO_APP_ID=your-client-id
COGNITO_APP_SECRET=your-client-secret
COGNITO_USER_POOL_ID=your-user-pool-id

# Frontend Cognito settings (Must match above)
REACT_APP_COGNITO_DOMAIN=https://your-domain.auth.your-region.amazoncognito.com
REACT_APP_COGNITO_APP_ID=your-client-id

# --- Email Configuration ---
# Set to 'django.core.mail.backends.console.EmailBackend' for testing (prints to logs)
# Set to 'django.core.mail.backends.smtp.EmailBackend' for production
CVAT_EMAIL_BACKEND=
CVAT_EMAIL_HOST=localhost
CVAT_EMAIL_PORT=25
CVAT_EMAIL_USE_TLS=false
CVAT_EMAIL_USE_SSL=false
CVAT_EMAIL_HOST_USER=
CVAT_EMAIL_HOST_PASSWORD=
CVAT_EMAIL_FROM=webmaster@localhost
CVAT_EMAIL_SUBJECT_PREFIX=[CVAT] 

# --- Analytics (Clickhouse/Vector) ---
CVAT_ANALYTICS=1
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=cvat
CLICKHOUSE_USER=user
CLICKHOUSE_PASSWORD=user
DJANGO_LOG_SERVER_HOST=vector
DJANGO_LOG_SERVER_PORT=8282

# --- Other Settings ---
ONE_RUNNING_JOB_IN_QUEUE_PER_USER=false
CVAT_CONCURRENT_CHUNK_PROCESSING=1
CVAT_LOG_IMPORT_ERRORS=true
